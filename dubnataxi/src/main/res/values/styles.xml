<!-- Base application theme. -->
<resources>
    <style name="Theme.MyTheme" parent="@style/Theme.Base.AppCompat.Light.DarkActionBar"/>

    <style name="info_text">
        <item name="android:padding">@dimen/info_text_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_text_size</item>
    </style>

    <style name="info_btn">
        <item name="android:layout_margin">@dimen/info_btn_margin</item>
        <item name="android:padding">@dimen/info_btn_padding</item>
        <item name="android:layout_width">@dimen/info_btn_width</item>
        <item name="android:layout_height">@dimen/info_btn_height</item>
        <item name="android:textSize">@dimen/list_text_size</item>
    </style>
</resources>

