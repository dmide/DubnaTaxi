<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <ImageView
        android:id="@+id/called"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/drawable_padding"
        android:paddingTop="@dimen/drawable_padding"
        android:paddingLeft="@dimen/drawable_padding"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_called"
        android:visibility="invisible"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/phone_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/called"
        android:textSize="@dimen/text_size_big" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:padding="@dimen/drawable_padding"
        android:alpha="0.7"
        android:src="@drawable/ic_action_call" />

</RelativeLayout>